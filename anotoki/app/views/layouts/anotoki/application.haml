!!!
%html
  %head
    %title= seory.title
    %meta{:name => "description", :content => "#{seory.meta_description}"}
    %meta{:name => "keywords", :content => "#{seory.meta_keywords}"}
    %meta{:content => image_path("anotoki/ogp_image.png"), :property => "og:image"}
    = stylesheet_link_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', media: 'all'
    = stylesheet_link_tag 'anotoki/application', media: 'all'
    = yield :stylesheet
    = javascript_include_tag 'anotoki/application'
    = csrf_meta_tags
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    - if Rails.env.production?
      :javascript
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-25666978-4', 'auto');
        ga('send', 'pageview');

  %body
    = yield

    - if @content_for_javascript
      = @content_for_javascript